#!/bin/sh

# Allows us to read user input below, assigns stdin to keyboard
exec < /dev/tty

read -p "$(echo '\033[1;33mSkip checks? \033[0;36m(y to skip, any other key to continue): \033[0m')" yn
case $yn in
    [Yy]* ) echo "\033[0;33mSkipping checks.. âš ï¸\033[0m"; exit 0;;
esac

bundle exec rake lint:rubocop
if [ $? -ne 0 ]; then
    echo "\033[0;33mðŸ§¹ Linting failed. âš ï¸\033[0m"

    while true; do
        read -p "$(echo '\033[1;34mContinue anyway? \033[0;36m(y to continue, any other key to cancel): \033[0m')" yn
        case $yn in
            [Yy]* ) echo "\033[0;32mContinuing to testing.. ðŸ§ª\033[0m"; break;;
            * ) echo "\033[0;31mAborting push. ðŸ›‘\033[0m"; exit 1;;
        esac
    done
fi

rails test
if [ $? -ne 0 ]; then
    echo "\033[0;33mðŸ§ª Testing failed. âš ï¸\033[0m"

    while true; do
        read -p "$(echo '\033[1;34mPush anyway? \033[0;36m(y to push, any other key to cancel): \033[0m')" yn
        case $yn in
            [Yy]* ) echo "\033[0;32mPushing.. ðŸš€\033[0m"; break;;
            * ) echo "\033[0;31mAborting push. ðŸ›‘\033[0m"; exit 1;;
        esac
    done
fi
